{
  "name": "zusty",
  "version": "0.0.1",
  "description": "A Powerful CSS Framework",
  "author": "Sarsa Murmu <sarsamurmu05@gmail.com>",
  "keywords": [
    "css",
    "framework",
    "scss",
    "html5"
  ],
  "jsdelivr": "dist/zusty.min.css",
  "browser": "dist/zusty.min.css",
  "main": "zusty.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarsamurmu/zusty.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sarsamurmu/zusty/issues",
    "email": "sarsamurmu05@gmail.com"
  },
  "homepage": "https://zustycss.com",
  "files": [
    "dist",
    "scss",
    "zusty.scss",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && npm run build-css && npm run add-autoprefix && npm run minify-css && npm run build-parted && npm run build-prefixless",
    "build-prefixless": "npm run build-css-prefixless && npm run add-autoprefix-prefixless && npm run minify-css-prefixless",
    "build-parted": "npm run build-css-p-theme && npm run build-css-p-variables && npm run build-css-p-zusty && npm run add-autoprefix-p && npm run minify-css-p",
    "add-autoprefix": "postcss --use autoprefixer --map false --output dist/zusty.css dist/zusty.css",
    "add-autoprefix-prefixless": "postcss --use autoprefixer --map false --output dist/zusty-prefixless.css dist/zusty-prefixless.css",
    "add-autoprefix-p": "postcss --use autoprefixer --map false --output dist/parted/zusty.css dist/parted/zusty.css",
    "build-css": "node-sass --output-style expanded --source-map true zusty.scss dist/zusty.css",
    "build-css-prefixless": "node-sass --output-style expanded scss/variants/zusty-prefixless.scss dist/zusty-prefixless.css",
    "build-css-p-theme": "node-sass --output-style expanded scss/variants/parted/theme.scss dist/parted/theme.css",
    "build-css-p-variables": "node-sass --output-style expanded scss/variants/parted/variables.scss dist/parted/variables.css",
    "build-css-p-zusty": "node-sass --output-style expanded --source-map true scss/variants/parted/zusty.scss dist/parted/zusty.css",
    "minify-css": "cleancss -o dist/zusty.min.css dist/zusty.css",
    "minify-css-prefixless": "cleancss -o dist/zusty-prefixless.min.css dist/zusty-prefixless.css",
    "minify-css-p": "cleancss -o dist/parted/zusty.min.css dist/parted/zusty.css",
    "start": "npm run build-css -- --watch",
    "test": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.2"
  }
}
